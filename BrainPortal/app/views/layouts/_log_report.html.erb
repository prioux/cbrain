<%
  # This partial displays an object's log
  # It requires two args, the 'log' and a 'title'
%>

<% unless log.blank? %>
  <div class="row">
  <div class="col-xs-12">
  <%= build_accordion do |acc| %>
    <%= acc.section h(title) do %>
      <pre><%= Message.parse_markup(log) %></pre>
    <% end %>
  <% end %>
  </div>
  </div>
<% end %>

